<div class="profile-card">
  <img src={{@profile.avatar_url}} alt="Profile Avatar" class="avatar">
  <h2>{{@profile.name}}</h2>
  <p class="username">@{{@profile.login}}</p>
  <p class="bio">{{@profile.bio}}</p>

  {{#if @profile.location}}
    <p class="location">üìç {{@profile.location}}</p>
  {{/if}}

  <div class="stats">
    <p>Repos: <strong>{{@profile.public_repos}}</strong></p>
    <p>Followers: <strong>{{@profile.followers}}</strong></p>
    <p>Following: <strong>{{@profile.following}}</strong></p>
  </div>

  <div class="links">
    <a href={{@profile.html_url}} target="_blank" class="github-btn" rel="noopener noreferrer">GitHub Profile</a>
  </div>
</div>
